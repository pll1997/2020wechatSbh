/* 搜索 - star */
.maxss{width: 100%;height: 46px;margin-top: 41px; background-color: #f7f7f7;    border: 1px solid #f7f7f7;}
.INinputheader{ width:90%; height:30px; background-color:#fff;margin: 20rpx auto;
  border-radius:10px; font-size: 14px;  position: relative;}
.INsearchicon{ position: absolute;left:12px;top: 15rpx;color: #bdbdbd;}
.weui-input{height: 30px;line-height: 30px; text-align: left; font-size: 0.9rem;
  padding-left: 35px;padding-right: 15px;letter-spacing:0px;}
.INtab{text-align: left;margin-left: 12px; color: #fff;}
/* 搜索 - end */
.max-center{ }
.tlt{width: 90%; height: 35px;line-height: 35px; margin: 0 auto;display: flex;justify-content:space-between; 
  color: #08a48f;
}
/* tab -star */
.tab{margin-top: 100rpx;display: flex;justify-content:space-between;background-color: #fff;}
.tab>view{ flex: 1;overflow: hidden;  height:30px; line-height: 30px; text-align:center; border-bottom: 1px solid #f7f7f7;
  border-right: 1px solid #f7f7f7;
}
.tab>view text{
  max-width: 74%;vertical-align: middle;
  white-space:nowrap;overflow:hidden;text-overflow:ellipsis;
  display:inline-block; text-align: center;
}
.tab>view:last-child{ border-right:none;}
.tab>view image{width: 30rpx;vertical-align: middle;margin-left: 10rpx;
  transition:transform 0.3s;}
.select_img_rotate{
  transform:rotate(180deg); 
 }
/*筛选项隐藏 显示动画 end*/ /*筛选项显示出来的时候的阴影*/ 
.shadow {   
	width: 100%;height: 100vh;background-color: rgba(0, 0, 0, 0.3);   
  z-index: 40; position: fixed;top: 72rpx; 
} 
.option_box{overflow: auto; max-height: 800rpx;}
.option{ 
  display: block; 
  padding: 15rpx 5rpx;
  text-align: center; font-size: 0.8rem; color: #ccc;
  border-bottom: 1px solid #f4f4f4; 
  background-color: #FFF;
}
.active{background-color: #08a48f;color: #FFF;}

/* tab -end */
image{height:auto}
/* list - star */
.list{width: 97%; margin: 20rpx 0;display: flex; margin-top: 30rpx;}
.lsit-l{width: 10%; text-align: center;}
.yuan{width: 50rpx;position: relative;top: -2px;z-index: 10;}
.xian{width: 10px;height: 100%;display: block;
  border-left: 2px solid #bbb;position: relative;top: -10px;left: 49%;}
